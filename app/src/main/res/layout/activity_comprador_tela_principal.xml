<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="inf221.trabalho.com.farrago.controller.CompradorTelaPrincipal"
    android:weightSum="1">
    <ImageView
        android:id="@+id/imagem_12"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:src="@drawable/festa1"
        android:scaleType="centerCrop"
        android:layout_weight="0.29" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="43dp"
        android:layout_weight="0.18">

        <ImageButton
            android:id="@+id/botao_pesquisar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="14dp"
            android:scaleType="centerCrop"
            android:background="@color/colorWhite"
            android:src="@drawable/pesquisar_button"
            android:onClick="pesquisar"/>

        <ImageButton
            android:id="@+id/botao_mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginRight="14dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/mensagem_button" />

        <ImageButton
            android:id="@+id/boato_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:scaleType="centerCrop"
            android:layout_marginLeft="14dp"
            android:background="@android:color/transparent"
            android:src="@drawable/config_button" />

        <ImageButton
            android:id="@+id/botao_meus_ingressos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:scaleType="centerCrop"
            android:layout_marginRight="14dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ingressos_button"
            android:onClick="irParaMeusIngressos"/>
    </FrameLayout>

</LinearLayout>
